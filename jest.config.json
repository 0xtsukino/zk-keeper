{
    "transform": {
        "\\.(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": ["ts", "js", "tsx"],
    "moduleNameMapper": {
        "@src/(.*)$": "<rootDir>/src/$1"
    },
    "coveragePathIgnorePatterns": ["/node_modules/", "/test/"],
    "collectCoverageFrom": ["src/**/*.{ts,tsx}"],
    "coverageThreshold": {
        "global": {
            "branches": 90,
            "functions": 95,
            "lines": 95,
            "statements": 95
        }
    }
}
